<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/print_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="print_log"
        android:onClick="printLog"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/show_log_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="show_log_window"
        android:onClick="showLogWindow"
        app:layout_constraintTop_toBottomOf="@id/print_log"
        />
    <Button
        android:id="@+id/close_log_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="close_log_window"
        android:onClick="closeLogWindow"
        app:layout_constraintTop_toBottomOf="@id/show_log_window"
        />
    <Button
        android:id="@+id/resume_exe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="resume_exe"
        android:onClick="resume"
        app:layout_constraintTop_toBottomOf="@id/close_log_window"
        />
    <Button
        android:id="@+id/pause_exe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pause_exe"
        android:onClick="pause"
        app:layout_constraintTop_toBottomOf="@id/resume_exe"
        />

</androidx.constraintlayout.widget.ConstraintLayout>